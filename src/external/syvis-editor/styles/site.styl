*
  margin 0
  padding 0
  border 0

body
  color mutedColor
  font-size 12px
  font-family sans-serif
  background-color backgroundColor

  > main
    width 50em
    padding 2em 1em 5em 1em
    margin 0 auto

h1
  font-size 3em
  margin-bottom 0.5em

h2
  margin-bottom 1em

p
  margin-bottom 0.5em

form#fileUrl
  display inline-block
  input[type=text]
    border-width 1px
    border-style solid
    border-radius 0.5em
    border-color silentColor
    padding 0.5em 1em
    width 40em

  button
    border-width 1px
    border-style solid
    border-color silentColor
    border-radius 0.5em
    cursor pointer
    padding 0.5em 1em
    margin 2em
